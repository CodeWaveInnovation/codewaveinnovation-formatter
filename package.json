{
  "name": "@codewaveinnovation/formatter",
  "version": "1.1.0",
  "description": "Language-agnostic code formatter with configurable rules and plugin support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cwf": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "formatter",
    "code-formatter",
    "linter",
    "beautifier",
    "plugin",
    "typescript"
  ],
  "author": "CodeWave Innovation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeWaveInnovation/codewaveinnovation-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/CodeWaveInnovation/codewaveinnovation-formatter/issues"
  },
  "homepage": "https://github.com/CodeWaveInnovation/codewaveinnovation-formatter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.0.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
